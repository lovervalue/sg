<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="default" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <plugin type="com.sofn.core.generator.plugin.SerializablePlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="com.sofn.core.generator.plugin.MapperPlugin">
        	<property name="targetProject" value="../sofn-sys-service/src/main/java"/>
        	<property name="targetPackage" value="com.sofn.dao.generator"/>
        </plugin>
        <commentGenerator>
            <!-- 去掉自动生成的所有注释 -->
            <property name="suppressAllComments" value="true" />
            <property name="suppressDate" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@192.168.21.249:1521:gjzs"
                        userId="gjzspt" password="12345678">
        </jdbcConnection>
        <!--  默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
              true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal
        -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成的实体类配置 -->
        <javaModelGenerator targetPackage="com.sofn.model.generator" targetProject="../sofn-sys-api/src/main/java">
            <property name="constructorBased" value="false"/>
            <property name="useActualColumnNames" value="true" />
            <property name="enableSubPackages" value="false"/>
            <property name="immutable" value="false"/>
            <property name="trimStrings" value="true"/>
            <property name="rootClass" value="com.sofn.core.base.BaseModel"/>
        </javaModelGenerator>
        <!-- mapper.xml 配置 -->
        <sqlMapGenerator targetPackage="mappers.generator" targetProject="../sofn-sys-service/src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <!-- dao 接口配置 -->
        <javaClientGenerator targetPackage="com.sofn.dao.generator" targetProject="../sofn-sys-service/src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value=""/>
            <property name="methodNameCalculator" value=""/>
            <property name="rootInterface" value="com.sofn.core.base.BaseMapper"/>
        </javaClientGenerator>
        <table tableName="SYS_DICT_TYPE"/>
    </context>
</generatorConfiguration>


<!-- mybatis-generator:generate -e -DconfigurationFile=generatorConfig.xml -->