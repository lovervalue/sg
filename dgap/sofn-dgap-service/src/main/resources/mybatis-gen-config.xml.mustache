<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="default" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <plugin type="com.sofn.mybatis.generator.plugin.BeanValidationPlugin"/>
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <commentGenerator>
            <!-- 去掉自动生成的所有注释 -->
            <property name="suppressAllComments" value="true" />
            <property name="suppressDate" value="true"/>
        </commentGenerator>
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="{{connectionURL}}"
                        userId="{{userId}}" password="{{password}}">
        </jdbcConnection>
        <!-- 生成的实体类配置 -->
        <javaModelGenerator targetPackage="{{targetPackage}}" targetProject="{{targetProject}}">
            <property name="constructorBased" value="false"/>
            <property name="enableSubPackages" value="false"/>
            <property name="immutable" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        {{#tables}}
        <table schema="{{schema}}" tableName="{{tableName}}">
            <ignoreColumn column="DATAID"></ignoreColumn>
            <ignoreColumn column="TOKEN"></ignoreColumn>
            <ignoreColumn column="STATUS"></ignoreColumn>
            <ignoreColumn column="OPREATE"></ignoreColumn>
            <ignoreColumn column="DATA_IMPORT_TIME"></ignoreColumn>
            <ignoreColumn column="MARK"></ignoreColumn>
        </table>
        {{/tables}}
    </context>
</generatorConfiguration>