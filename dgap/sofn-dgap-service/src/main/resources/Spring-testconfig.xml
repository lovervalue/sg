<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	<!--<context:property-placeholder ignore-unresolvable="true" location="${system.config.path}" />-->
	<context:property-placeholder ignore-unresolvable="true" location="classpath:system.properties" />
	<!-- 引入属性配置文件,覆盖默认配置文件 -->
	<bean class="com.sofn.core.util.PropertiesUtil">
		<property name="locations">
			<list>
				<!--<value>${sys.jdbc.config.path}</value>-->
				<!--<value>${system.config.path}</value>-->
				<value>classpath:system.properties</value>
			</list>
		</property>
		<property name="properties">
			<props>
				<!-- dubbo个性化配置(服务名,端口),不同的 service 模块有不同的端口和名称,便于区分 -->
				<prop key="dubbo.application.name">${project.artifactId}</prop>
				<prop key="dubbo.protocol.port">${dgap.dubbo.protocol.port}</prop>
			</props>
		</property>
	</bean>

	<bean id="tDgapWsDailyStatProviderImpl" class="com.sofn.provider.dgap.TDgapWsDailyStatProviderImpl">
	</bean>
	<bean id="tDgapAlertConfigProviderImpl" class="com.sofn.provider.dgap.TDgapAlertConfigProviderImpl">
	</bean>
	<bean id="tDgapResourceApplicationProviderImpl" class="com.sofn.provider.dgap.TDgapResourceApplicationProviderImpl">
	</bean>
	<bean id="TDgapLocalPlatFormAppliProviderImpl" class="com.sofn.provider.dgap.TDgapLocalPlatFormAppliProviderImpl">
	</bean>
	<bean id="TDgapLocalAuditProviderImpl" class="com.sofn.provider.dgap.TDgapLocalAuditProviderImpl">
	</bean>
	<bean class="com.sofn.provider.dgap.TDgapWsErrorLogProviderImpl">
	</bean>

	<!-- 扫描注解 -->
	<context:component-scan base-package="com.sofn">
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller" />
	</context:component-scan>
	<!-- 引入SPRING配置文件 -->
	<!--<import resource="spring/mq.xml"/>-->
	<import resource="spring/rabbitMq.xml"/>
	<!--<import resource="spring/dubbo.xml" />-->
	<import resource="spring/dataSource.xml"/>
	<import resource="spring/mybatis.xml"/>
	<import resource="spring/redis.xml"/>

</beans>